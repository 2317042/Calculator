pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/2317042/Calculator.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'pip install flask'
            }
        }
        stage('Run Calculator') {
            steps {
                bat 'python ex10.py'
            }
        }
    }
}
